.author
  margin-top: -30px
  width: 100%
  z-index: 300
  text-align: center
  box-sizing: border-box
  .head
    z-index: 300
    user-select: none
    width: 100px
    height: 100px
    border-radius: 50%
    padding: 3px
    background: color-white
    box-shadow: 0 0 5px #95a5a6
    position: relative
    margin: 0 auto
    transform: translateY(-20px)
    transition: all 0.4s
    img
      width: 100%
      height: 100%
      display: block
      border-radius: 50%
  @media m-pad
    margin-top: -15px
    .head
      width: 80px
      height: 80px

.about-app .share-icons
  text-align: center
  font-size: 14px
  margin-bottom: 20px
  a
    display: inline-block
    margin: 0 .4em
    .desktop &:hover
      transition: opacity 0.2s
      opacity: .6
  .icon-email
    color: #2aa9e0
  .icon-weibo
    color: #e6162d
  .icon-github
    color: #333333
  .icon-zhihu
    color: #0767c8
  .icon-twitter
    color: #2aa9e0