#archives
  &:before
    position: absolute
    top: 2em
    bottom: 1em
    left: 30px
    height: auto
    content: ''
    background-color:color-primary
    width: 4px
    @media m-mobile
      left: 22px
.time-section
  padding-left: 30px
  position: relative
  .section-year, .section-month
    font-size: 1.8em
    margin-left: 10px
    &:before
      position: absolute
      left: 8px
      top: 11px
      content: ''
      background-color: color-white
      width: 12px
      height: 12px
      border: 2px solid color-primary
      border-radius: 50%
    small
      color: color-gray
  .section-month
    font-size: 1.5em
  .section-list
    .section-list-item
      margin: 20px 0 20px 10px
      position: relative
      &:before
        position: absolute
        left: -29px
        top: 7px
        content: ''
        background-color: color-primary
        width: 10px
        height: 10px
        border-radius: 50%
  a
    color: color-dark
    transition: all .3s ease
    font-size: 1.1em
    .desktop &:hover
      color: color-primary
  .archive-date
    color: color-gray
    font-size: .9em
    margin: 5px 0