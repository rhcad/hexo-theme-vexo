#tag-cloud
  margin: 20px 0
  text-align: center
  a
    border: none
    line-height: 28px
    margin: 0 4px
    margin-bottom: 8px
    background: #63a35c
    display: inline-block
    border-radius: 4px
    padding: 0 10px
    color: color-white
    transition: background .5s
    .desktop &:hover
      background: rgb(0, 133, 161)
  .tag0
    background: #bbe
  .tag1
    background: #9cb2e1
  .tag2
    background-color: rgba(0, 133, 161, 0.8)

.tag-list
  margin-left: 1em
  margin-right: 1em

.tag-name
  font-size: 1.4em
  position: relative
  &:before
    content: "#"
    color: color-primary
    position: absolute;
    left: -.7em
    top: -2px
    font-size: 1.2em
    font-weight: 700
    
.tag-preview
  font-size: 1.1em
  padding-left: 1em
  li
    margin: 10px 0
    list-style: none
    .tag-time
      font-size: 0.9em

#page-nav
  clearfix()
  margin: block-margin auto
  background: color-white
  text-align: center
  color: color-gray
  overflow: hidden
  a, span
    padding: 10px
    line-height: 1
    height: 2ex
  a
    color: color-gray
    text-decoration: none
    .desktop &:hover
      background: color-gray
      color: color-white
  .page-number
    display: inline-block
    @media mq-mobile
      display: none
  .current
    color: color-default
    font-weight: bold
  .space
    color: color-border