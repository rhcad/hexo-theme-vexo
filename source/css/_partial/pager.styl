.guide-pager
  margin: 1em 3em 2em
  display: flex
  justify-content: space-between
  font-size: 15px
  font-weight: 600
  .desktop & a:hover
    color: color-dark
  a:nth-child(2)
    text-align: right
  a:last-child
    text-align: right
  @media m-pad
    margin: 1em 0.5em 2em 0.7em
  a + a
    margin-left: 8px

.unvisible
  visibility: hidden