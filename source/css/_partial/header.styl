.header
  background: none
  border: none
  position: absolute
  top: 0
  left: 0
  width: 100%
  z-index: 200
  transition: background .5s
  &:not(.fixed-header)
    .list-item.active, .desktop & list-item:hover
      border-bottom-color: #a2e0da
    a
      color: #b4f2ec
    .page-title
      display: none

.fixed-header
  position: fixed
  background-color: rgba(250, 250, 250, 0.98)
  box-shadow: 0 1px 3px rgba(14, 14, 14, .26)
  .home-link
    color: color-primary
  .menu .icon-bar
    background-color: color-gray
  .item-link
    color: color-gray
  .mobile-active
    font-weight: 700
    color: color-dark
  .site-title
    display: none
  .home-link.page-title
    font-size: 1.1em
    line-height: 40px
    overflow-x: hidden
    white-space: nowrap
    max-width: calc(100% - 170px - 50px)
    @media m-mobile
      max-width: calc(100% - 30px - 50px)

.header-container
  max-width: 1200px
  height: 40px
  margin: 0 auto;
  padding: 10px 30px
  position: relative
  @media m-mobile
    padding: 6px 20px
    position: relative

  .logo
    background: url(logo-url)
    background-size: contain
    width: 40px
    height: 40px
    margin-right: 10px

  .home-link
    display: flex
    align-items: center
    float: left
    font-weight: 500
    font-size: 1.5em

  .right-list
    list-style: none
    float: right
    padding: 0
    @media m-mobile
      display: none

  .list-item
    display: inline-block
    margin: 0 6px
    &.active, .desktop &:hover
      border-bottom: 3px solid color-primary
    .fixed-header &
      padding: 3px 0 4px

  .item-link
    height: 40px
    line-height: 40px
    text-decoration: none
    padding-bottom: 10px
    padding-top: 10px

.menu
  display: none
  float: right
  width: 24px
  height: 24px
  margin-top: 10px
  .icon-bar
    display: block
    width: 24px
    height: 2px
    border-radius: 1px
    margin-top: 4px
    background-color: color-white
  @media m-mobile
    display: block

.menu-search
  display: none
  float: right
  width: 36px
  height: 24px
  margin-top: 10px
  color: color-gray
  text-align: center
  .open &
    @media m-mobile
      display: block

.menu-mask
  display: none
  position: fixed
  left: 0
  top: 46px
  z-index: 99
  width: 100%
  overflow: hidden
  max-height: 0
  background: rgba(250, 250, 250, 0.98)
  -webkit-transition: max-height .2s ease
  transition: max-height .2s ease
  @media m-mobile
    display: block

.open
  @media m-mobile
    box-shadow: none
    .menu-mask
      max-height: 300px
      transition-delay: .1s
      box-shadow: 0 1px 2px rgba(14, 14, 14, .26)

.menu-list
  padding: 0

.menu-item
  position: relative
  list-style: none
  text-align: center
  & mobile-active
    color: color-primary
  &:after
    content: ''
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-bottom: 1px solid color-border
    -webkit-transform: scaleY(0.5)
    transform: scaleY(0.5)
  & > a + a
    margin-left: 20px
    padding-left: 20px
    border-left: 1px solid color-border

.menu-link
  text-decoration: none
  color: color-gray

.submenu
  display: none
  position: absolute
  background-color: color-background
  border-radius: 2px
  box-shadow: 0 0 1px rgba(14, 14, 14, .26)
  min-width: 80px
  padding: 8px
  .list-item
    display: block
    border-bottom: none !important
    padding: 0 4px;
    &.active a
      font-weight: 700
    a
      word-break: keep-all
      color: color-primary
      height: 32px
      line-height: 32px
    &.active a, .desktop &:hover a
      color: color-dark

.item-link i
  transition: all 0.4s ease;
.open i.fa-angle-down
  transform: rotate(180deg)
